@model AdventAuto.Models.Staff
@{
    ViewBag.Title = "Create";
}

<h1>Add Staff Member</h1>
<div class="pagetitle">
    <h1>Add Staff Member</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-9">
        @using (Ajax.BeginForm("AddStaff", "Staff", null, new AjaxOptions { HttpMethod = "POST" }, null))
        {
            <form>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <label class="text-white mb-3" id="errorMessage"></label>
                <div class="row">
                    <div class="col-lg-6 px-3">
                        <div id="nameError" class="invalid-feedback font-italic">Enter a valid Name</div>
                        @Html.Label("Employee Name")
                        @Html.EditorFor(model => model.EmployeeName, "Name", new { htmlAttributes = new { @class = "form-control form-control-lg", @type = "text", @placeholder = "Name", @required = "true" } })
                    </div>
                    <div class="col-lg-6 px-3">
                        <div id="nameError" class="invalid-feedback font-italic">Enter a valid Name</div>
                        @Html.Label("Employee Surname")
                        @Html.EditorFor(model => model.EmployeeSurname, "Surname", new { htmlAttributes = new { @class = "form-control form-control-lg", @type = "text", @placeholder = "Surname", @required = "true" } })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-12 px-3">
                        @Html.Label("Role")
                        @Html.EditorFor(model => model.Role, "Role", new { htmlAttributes = new { @class = "form-control form-control-lg", @type = "text", @placeholder = "Roles", @required = "true" } })
                    </div>
                </div>
                <br />
                <br />
                <div class="row">
                    <div class="col-lg-12 px-3">
                        <div id="phoneError" class="invalid-feedback font-italic ">Enter a valid password</div>
                        @Html.Label("Username")
                        @Html.EditorFor(model => model.Username, "Username", new { htmlAttributes = new { @class = "form-control form-control-lg", @type = "text", @placeholder = "Username", @required = "true" } })
                    </div>
                </div>
                <br />
                <div id="submitArea" class="form-group col-12 mt-4">
                    <button type="submit" id="btnLogin" class="btn btn-primary w-100">Submit</button>
                </div>
            </form>
        }
    </div>
</div>

