@model AdventAuto.Models.Stock
@{
    ViewBag.Title = "Create";

    string[] list = { "Cat1", "Cat2", "Cat3" };
}

<div class="pagetitle">
    <h1>Add Stock</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-6">
        @using (Ajax.BeginForm("AddStock", "Stock", null, new AjaxOptions { HttpMethod = "POST" }, null))
        {
            <form>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <label class="text-white mb-3" id="errorMessage"></label>
                <div class="row">
                    <div class="col-lg-12 px-3">
                        <div id="nameError" class="invalid-feedback font-italic">Enter a valid Name</div>
                        @Html.Label("Product Name")
                        @Html.EditorFor(model => model.ProductName, "Name", new { htmlAttributes = new { @class = "form-control form-control-lg", @type = "text", @placeholder = "Product Name", @required = "true" } })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-12 px-3">
                        @Html.Label("Description")
                        @Html.TextAreaFor(model => model.Description, 6, 12, new { @class = "form-control form-control-lg w-100", @placeholder = "More Information about the product..." })
                    </div>
                </div>
                <br />
                <br />
                <div class="row">
                    <div class="col-lg-12 px-3">
                        <div id="phoneError" class="invalid-feedback font-italic ">Enter valid quantity</div>
                        @Html.Label("Quantity")
                        @Html.EditorFor(model => model.Quantity, "Quantity", new { htmlAttributes = new { @class = "form-control form-control-lg", @type = "number", @placeholder = "Quantity", @required = "true" } })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-12 px-3">
                        <div id="phoneError" class="invalid-feedback font-italic ">Enter a valid amount</div>
                        @Html.Label("Price")
                        @Html.EditorFor(model => model.Price, "Price", new { htmlAttributes = new { @class = "form-control form-control-lg", @type = "text", @placeholder = "Price" } })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-12 px-3">
                        <div id="phoneError" class="invalid-feedback font-italic ">Select a Category</div>
                        @Html.Label("Product Category")
                        @Html.DropDownListFor(model => model.ProductCategory, new SelectList(list), "Select Category", new { @class = "form-control form-control-lg w-100", @required = "true" })
                    </div>
                </div>
                <br />
                <div id="submitArea" class="form-group col-12 mt-4">
                    <button type="submit" id="btnLogin" class="btn btn-primary w-100">Submit</button>
                </div>
            </form>
        }
    </div>
</div>
